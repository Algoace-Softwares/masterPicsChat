{
  "name": "masterpicschat",
  "version": "1.0.0",
  "description": "a simple chat app for master pics",
  "license": "ISC",
  "author": "algoace",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon src/server.ts",
    "prod": "npx ts-node src/server.ts",
    "build": "rm -rf dist && tsc",
    "lint": "eslint .",
    "lint-fix": "eslint --fix",
    "format": "npx prettier . --write",
    "start:prod": "npm run build && pm2 start dist/server.js --name masterpics",
    "start:pm2": "pm2 start \"npm run prod\" --name masterpics",
    "restart:pm2": "pm2 restart masterpics",
    "stop:pm2": "pm2 stop masterpics",
    "logs:pm2": "pm2 logs masterpics",
    "delete:pm2": "pm2 delete masterpics"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "firebase-admin": "^12.6.0",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.1",
    "socket.io": "^4.8.1",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/cookie": "^0.6.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  }
}
